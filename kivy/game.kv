<Gamee>:
    name:name
    password:password
    conf_password:conf_password
    GridLayout:
        cols:1
        size:root.width-100,root.height-200
        pos:50,100

        GridLayout:
            cols:2
            Label:
                text:"Name"
            TextInput:
                id:name
                multiline:False

            Label:
                text:"Password"
            TextInput:
                id:password
                multiline:False

            Label:
                text:"Conform Password"
            TextInput:
                id:conf_password
                multiline:False
        Button:
            id:btnn
            text: "Submit" if btnn.state=="normal" else "Done"
            background_color:0.9,0.1,0.5,1
            on_press:root.btn()


